<style>
  *{
    text-align:center;
  }
  span{
    color:midnightblue;
    font-size:1.2em;
    padding:5px;
    font-family:Georgia,sans-serif;
    text-transform: capitalize;
  }
	.LongToShort{
		border:2px solid black;
		padding:5px;
		margin:1px;
		position:relative;
		display:block;
	}
	.ShortToLong{
    margin:2px;
		border:2px solid black;
		position:relative;
		display:block;
		padding:5px;  
	}
  button{
    text-align:center;
    padding:2px;
    font-family:Georgia,sans-serif;
    font-size:1.2em;
  }
  .btn-group button {
  position:relative;
  left:20%;
  background-color: lightblue; 
  border: 1px solid gray; 
  color: white; 
  padding: 10px 24px; 
  cursor: pointer; 
  float: left; 
  } 

  /* Clear floats (clearfix hack) */
  .btn-group:after {
    content: "";
    clear: both;
    display: table;
  }

  .btn-group button:not(:last-child) {
    border-right: none; 
  }
</style>

<h2>WELCOME TO URL SHORTNER</h2>
<span>Hi <%= session[:username] %></span><br/>

<div class=LongToShort>
  <%= form_for @url , url: urls_long_path do |f| %>
    <p> Long Url: <%= f.text_field :longurl%> </br></p>
    <p>Domain : <%= f.text_field :domain%> <br /></p>
    <p>Find : <%=  f.submit 'Search' %><br/>
  <% end %>
</div>

<br/><br/>

<div class=ShortToLong>
  <%= form_for @url, url: urls_short_path do |f| %>
    <p> Short Url / Suffix: <%= f.text_field :shorturl%> </br></p>
    <p>Find : <%=  f.submit  'Search'%><br/></p>
  <% end %>
</div>

<br/><br/>

<div class="errors">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
</div>

<br/><br/>

<div class="btn-group">
  <button>Logout : <%= link_to 'logout',user_logout_path  %> </button>
  <button>Daily Report : <%= link_to 'index',urlreport_path  %> </button>
  <button>Elastic Search : <%= link_to 'search',url_search_path  %> </button>
</div>
