<style>
  span{
    color:midnightblue;
    font-size:1.2em;
    padding:5px;
    font-family:Georgia,sans-serif;
    text-transform: capitalize;
  }
	.form{
		border:1px solid black;
		padding:10px;
		margin:15px;
		position:relative;
	}
  button{
    text-align:center;
    padding:2px;
    font-family:Georgia,sans-serif;
    font-size:1.2em;
  }
  .btn-group button {
  position:relative;
  left:1%;
  background-color: lightblue; 
  border: 1px solid gray; 
  color: white; 
  padding: 10px 24px; 
  cursor: pointer; 
  float: left; 
  } 

  /* Clear floats (clearfix hack) */
  .btn-group:after {
    content: "";
    clear: both;
    display: table;
  }

  .btn-group button:not(:last-child) {
    border-right: none; 
  }
</style>
<div>
  <h2>URL SHORTNER</h2>
  <span>Hi <%= session[:username] %></span>
  <div class="form">
    <%= form_for @url , url: urls_long_path do |form| %>
      <p>Long Url: <%= form.text_field :longurl%> </br></p>
      <p>Domain : <%= form.text_field :domain%> <br /></p>
      <p>Find : <%=  form.submit 'Search' %></p><br/>
    <% end %>
  </div>

  <div class="form">
    <%= form_for @url, url: url_long_path, method: :get do |form| %>
      <p> Short Url / Suffix: <%= form.text_field :shorturl%> </br></p>
      <p>Find : <%=  form.submit  'Search'%><br/></p>
    <% end %>
  </div>

  <div class="errors">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
  </div>

  <div class="btn-group">
    <button>Add ShortDomain : <%= link_to 'create',new_short_domain_path %></button>
    <button>Short Domain List: <%= link_to 'showall', short_domain_index_path  %> </button>
    <button>Logout : <%= link_to 'logout',user_logout_path  %> </button>
    <button>Daily Report : <%= link_to 'index',urlreport_path  %> </button>
    <button>Elastic Search : <%= link_to 'search',url_search_path  %> </button>
  </div>
</div>
